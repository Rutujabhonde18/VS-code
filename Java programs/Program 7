import java.util.Scanner;
class Main{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Temperature Converter");
        System.out.println("1. Celcius to Fahrenheit");
        System.out.println("2. Fahreinheit to Celcius");
        System.out.print("Enter choice : ");
        int choice = sc.nextInt();
        
        if(choice == 1){
            System.out.print("Enter temperature in celcius : ");
            double c = sc.nextInt();
            double f = ((9/5) * c) + 32;
            System.out.print(c + " C in fahreinheit is equal to "+ f + "F");
        }
        
        if(choice == 2){
            System.out.print("Enter temperature in fahreinheit : ");
            double f = sc.nextInt();
            double c = (f-32) * 5/9;
            System.out.print(f + " F in celcius is equal to "+ c + "C");
        }
    }
}

Temperature Converter
1. Celcius to Fahrenheit
2. Fahreinheit to Celcius
Enter choice : 2
Enter temperature in fahreinheit : 77
77.0 F in celcius is equal to 25.0C
